<%-include("partials/header", {title: title})-%>
<div class="asset-1">
  <%-include("partials/goBack", {nav: nav})-%>
  <form action="/admin/projects/create" method="post" enctype="multipart/form-data">
    <table>
      <tr>
        <td>
          <label for="">Title: </label>
        </td>
        <td>
          <input type="text" class="text-fields" name="titleAz" placeholder="Az">
        </td>
        <td>
          <input type="text" class="text-fields" name="titleEn" placeholder="En">
        </td>
      </tr>
      <tr>
        <td>
          <label for="">Description: </label>
        </td>
        <td>
          <textarea type="text" class="textarea-fields" name="descriptionAz" placeholder="Az"></textarea>
        </td>
        <td>
          <textarea type="text" class="textarea-fields" name="descriptionEn" placeholder="En"></textarea>
        </td>
      </tr>
      <tr>
        <td><label for="">Date: </label></td>
        <td><input type="date" name="date"></td>
      </tr>
      <tr>
        <td><label for="">Cover Image: </label></td>
        <td><input accept="image/*" type="file" name="imageCover" id="imgInp"></td>
      </tr>
      <tr>
        <td><img id="newImage" src="#" alt="your image" /></td>
      </tr>
      <tr>
        <td><label for="">Content Images: </label></td>
        <td><input type="file" name="images" accept="image/*" multiple="multiple"></td>
      </tr>
      <tr>
        <td><button type="submit" class="button create">Submit</button></td>
      </tr>
    </table>
  </form>
  <script>
    const imgInp = document.querySelector("#imgInp")
    const newImage = document.querySelector("#newImage")
    imgInp.onchange = evt => {
        const [file] = imgInp.files
        if (file) {
          newImage.src = URL.createObjectURL(file)
        }
    }
  </script>
</body>
</html>