<%-include("partials/header" ,{title: title});-%>
  <body>
    <%-include("partials/navbar", {projects: projects});-%>

    <section id="slide-show">
      <div class="slideshow-container">
        <div class="slider-container">
          <%slider.forEach( (slide) => {
            if (slide.isNewData){%>
              <div class="mySlides fade"  style="background-image:
              linear-gradient(
                to bottom,
                rgba(0, 0, 0, 0.3),
                rgba(0, 0, 0, 0.7)
              ), url('/uploads/<%=slide.imageCover%>');
              height: 100%;">
                <h2 class="slider-img-text"><%-slide.titleTop.en-%></h2>
                <h2 class="slider-img-text-bottom"><%-slide.titleBottom.en-%></h2>
                <a href="/eng/news" class="header-more header-more-text">Ətraflı</a>
              </div>
            <%}else{%>
              <div class="mySlides fade" style="background-image: url('/img/<%=slide.slide_image%>'); height: 100%;">
                <h2 class="slider-img-text"><%-slide.titleTop.en-%></h2>
                <h2 class="slider-img-text-bottom"><%-slide.titleBottom.en-%></h2>
              </div>
            <%}})%>
        </div>
        <div class="slider-controller-left">
          <a class="prev-1" onclick="plusSlides(-1)" style="height: 100%;">
            <i class="fa-solid fa-angle-left"></i>
          </a>
        </div>
        <div class="slider-controller-right">
          <a class="next-1" onclick="plusSlides(1)" style="height: 100%;">
            <i class="fa-solid fa-angle-right"></i>
          </a>
        </div>
      </div>
    </section>

    <section id="about-us">
      <video
        onclick="start_stop()"
        class="about-vid"
        poster="/images/ecosample.png"
      >
        <source src="/images/home.mp4" type="video/mp4" />
      </video>
      <%home_about.forEach((data)=>{
        if(data.isTop){%>
      <div class="about-us-text">
        <h2><%-data.title.en-%></h2>
        <p><%-data.description.en-%></p>
      </div>
      <%}});%>
    </section>
    <%home_about.forEach((data)=>{
      if (!data.isTop){%>
      <section id="plastic-1">
        <div class="sub-title">
          <h3><%-data.title.en-%></h3>
        </div>
        <div class="sub-content">
          <p>
            <%-data.description.en-%>
          </p>
        </div>
      </section>
  <%}});%>
    </section>

    <section id="projects">
      <div class="container-fluid">
        <div class="slider-wrap">
          <div class="projects-header">
            <a href="/eng/projects">
              <h2>Projects</h2>
            </a>
          </div>
          <div class="slider-main" id="slider-main">
            <%projects.forEach((project)=>{%>
            <div class="item">
              <div class="images-container">
                <img src="/uploads/<%=project.imageCover%>" alt="projects-image">
                <p class="slider-text"><%-project.title.en-%></p>
                <a href="/eng/projects" class="slider-text">
                  More
                </a>
              </div>
            </div>
            <%});%>
          </div>
          <div class="slider-btn">
            <a class="prev-2 controller" onclick="prev()">
              <i class="fa-solid fa-angle-left"></i>
            </a>
            <a class="next-2 controller" onclick="next()">
              <i class="fa-solid fa-angle-right"></i>
            </a>
          </div>
        </div>
      </div>
    </section>

    <section id="news">
      <div class="news-container">
        <div class="news-header">
          <div class="header">
            <a href="/eng/news">
              <h2>News</h2>
            </a>
          </div>
          <div class="header-more">
            <a class="header-more-text" href="/eng/news"> Read More </a>
          </div>
        </div>
        <div class="news-main">
          <div class="main-topic"style="background-image: linear-gradient(to bottom, rgba(0, 0, 0, 0.2), rgba(0, 0, 0, 0.6)),url(/uploads/<%=footer_news[0].imageCover%>);">
            <div class="date">
              <div class="date-logo">
                <i class="fa-solid fa-calendar-days"></i>
              </div>
              <p><%-footer_news[0].date.getDate()-%>.<%-footer_news[0].date.getMonth()-%>.<%-footer_news[0].date.getFullYear()-%></p>
            </div>
            <a href="/eng/news/<%=footer_news[0]._id%>" class="main-par">
              <%-footer_news[0].title.en-%>
            </a>
          </div>
          <div class="sub-topic">
            <%footer_news.slice(1,3).forEach((data)=>{%>
            <div class="sub">
              <div class="date">
                <div class="date-logo">
                  <i class="fa-solid fa-calendar-days"></i>
                </div>
                <p><%-data.date.getDate()-%>.<%-data.date.getMonth()-%>.<%-data.date.getFullYear()-%></p>
              </div>
              <a href="/eng/news/<%=data._id%>" class="sub-par">
                <%-data.title.en-%>
              </a>
              <a href="/eng/news/<%=data._id%>" class="sub-more"> Daha Ətraflı </a>
            </div>
            <%});%>
          </div>
        </div>
      </div>
    </section>

    <section id="partnership">
      <div class="sub-title">
        <h2>Partners</h2>
      </div>
      <div class="container">
        <section class="customer-logos slider">
          <%partners.forEach((partner)=>{%>
          <div
            class="slide"
            style="background-image: url(/uploads/<%=partner.image%>)"
          ></div>
          <%});%>
        </section>
      </div>
    </section>

    <%-include("partials/footer",{script: script, news:footer_news, contact:contact, projects: footer_projects, footer:logo});-%>
  </body>
</html>
